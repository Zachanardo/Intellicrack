# Automatic pixi environment activation with direnv
# Install direnv: https://direnv.net/
# Add to shell: eval "$(direnv hook bash)"

watch_file pixi.toml
watch_file pixi.lock

layout_pixi() {
    eval "$(pixi shell-hook)"
}

layout pixi

export RUSTUP_TOOLCHAIN=""
export PIXI_PROJECT_ROOT="$(pwd)"

# Force UV (used by pixi) to use the pixi environment Python instead of detecting system Python
export UV_PYTHON="$(pwd)/.pixi/envs/default/python.exe"
export UV_PYTHON_PREFERENCE="only-system"
